{
    admin off
    http_port 8000
    https_port 8443
}

(jwt_config) {
    token_name access_token
    token_secret 383aca9a-1c39-4d7a-b4d8-67ba4718dd3f
    token_issuer 7a50e023-2c6e-4a5e-913e-23ecd0e2b940
}

(trusted_tokens) {
    trusted_tokens {
        static_secret {
            import jwt_config
        }
    }
}

vinotheque.foo.bar {
    tls /certificates/vinotheque.foo.bar.pem /certificates/vinotheque.foo.bar-key.pem

    respond /health 200

    route /api* {
        jwt {
          import trusted_tokens
          auth_url /auth
          allow roles drinker
        }
        reverse_proxy http://service:8080
    }

    route /* {
        jwt {
            primary yes
            import trusted_tokens
            auth_url /auth
            allow roles drinker
        }
        reverse_proxy http://ui:8080
    }

    route /auth* {
    	auth_portal {
    		path /auth
    		backends {
    			local_backend {
    				method local
    				path /users.json
    				realm local
    			}
    		}
    		jwt {
                import jwt_config
    			token_lifetime 900
    		}
    	}
    }
}
